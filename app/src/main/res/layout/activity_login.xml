<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo_iamge"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/workout_login"/>

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/logo_iamge"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:hint="아이디"
        android:paddingStart="15dp"/>

    <EditText
        android:id="@+id/pw_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/id_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_background"
        android:hint="비밀번호"
        android:paddingStart="15dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findId_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/pw_edit"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="40dp"
        android:background="@color/white"
        android:text="아이디 찾기"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findPw_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/pw_edit"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="155dp"
        android:background="@color/white"
        android:text="비밀번호 찾기"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signUp_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/pw_edit"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="270dp"
        android:background="@color/white"
        android:text="회원가입"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/findPw_btn"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background"
        android:text="로그인"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>


</RelativeLayout>
