<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="261dp"
        android:text="트레이너"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/trainer_pw_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/trainer_name_edit"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="121dp"
        android:ems="10"
        android:hint="이름"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer" />

    <TextView
        android:id="@+id/trainer_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="이름"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/trainer_name_edit"
        app:layout_constraintEnd_toStartOf="@+id/trainer_name_edit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/trainer_pw_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:hint="비밀번호"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trainer_pw_text"
        app:layout_constraintTop_toBottomOf="@+id/checkId_btn" />

    <TextView
        android:id="@+id/trainer_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="비밀번호"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/trainer_pw_edit"
        app:layout_constraintEnd_toStartOf="@+id/trainer_pw_edit"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/trainer_pwCheck_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:hint="비밀번호 확인"
        app:layout_constraintBottom_toTopOf="@+id/gender_female"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trainer_pwCheck_text" />

    <EditText
        android:id="@+id/trainer_birthDate_edit"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="159dp"
        android:ems="10"
        android:hint="생년월일 (8자리 입력)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trainer_birthDate_text" />

    <RadioButton
        android:id="@+id/gender_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="23dp"
        android:text="여"
        app:layout_constraintBottom_toTopOf="@+id/trainer_birthDate_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gender_male" />

    <RadioButton
        android:id="@+id/gender_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="23dp"
        android:text="남"
        app:layout_constraintBottom_toTopOf="@+id/trainer_birthDate_edit"
        app:layout_constraintStart_toEndOf="@+id/trainer_gender_text" />

    <TextView
        android:id="@+id/trainer_pwCheck_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="비밀번호 확인"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/trainer_pwCheck_edit"
        app:layout_constraintEnd_toStartOf="@+id/trainer_pwCheck_edit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/trainer_gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="60dp"
        android:text="성별"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/gender_male"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_pwCheck_text" />

    <TextView
        android:id="@+id/trainer_birthDate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="159dp"
        android:text="생년월일"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/checkId_btn"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_background"
        android:text="ID중복 확인"
        app:layout_constraintBottom_toBottomOf="@+id/trainer_id_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/trainer_id_edit" />

    <EditText
        android:id="@+id/trainer_id_edit"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="128dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="@+id/trainer_name_edit"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name_edit" />

    <TextView
        android:id="@+id/trainer_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="아이디"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/trainer_id_edit"
        app:layout_constraintEnd_toStartOf="@+id/trainer_id_edit"
        app:layout_constraintHorizontal_bias="0.415"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnSubmit"
        android:layout_width="85dp"
        android:layout_height="48dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/btn_background"
        android:text="확인"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trainer_birthDate_edit"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>