<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/back_iv"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/traineeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/back_iv">
        <!-- 트레이니용 뷰 -->
        <EditText
            android:id="@+id/etApplysessionTrainerUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:hint="TrainerUid"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="76dp" />

        <EditText
            android:id="@+id/etApplysessionTraineeUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:hint="TraineeUid"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="128dp" />

        <Button
            android:id="@+id/btnApplysession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_search_button"
            android:text="PT 신청"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="203dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>