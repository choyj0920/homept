<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/back_iv"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <LinearLayout
        android:id="@+id/traineeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/back_iv">
        <!-- 트레이니용 뷰 -->
        <EditText
            android:id="@+id/etApplysessionTrainerUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="76dp" />

        <EditText
            android:id="@+id/etApplysessionTraineeUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="128dp" />

        <Button
            android:id="@+id/btnApplysession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_search_button"
            android:text="PT 신청"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="203dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trainerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/traineeLayout">
        <!-- 트레이너용 뷰 -->
        <EditText
            android:id="@+id/etApprovesessionSid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="486dp" />

        <EditText
            android:id="@+id/etApprovesessionTrainerUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:inputType="text"
            android:text="Name"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="538dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnApprovesession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_search_button"
                android:text="승인"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="611dp" />

            <Button
                android:id="@+id/btnDisapprovesession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_search_button"
                android:text="거절"
                android:layout_marginLeft="16dp"
                tools:layout_editor_absoluteX="224dp"
                tools:layout_editor_absoluteY="611dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>