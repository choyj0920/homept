<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".hbtiTest.HbtiTestActivity">

    <include
        android:id="@+id/toolbar_back_iv"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize" />

    <ScrollView
        android:id="@+id/sv_hbti"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_back_iv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hbti_ll_background"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_hQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="question1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_heavy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_h1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_h3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모르겠다/보통"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_h4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hbti_ll_background"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_bQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="question1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_bulk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_b1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_b2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_b3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모르겠다/보통"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_b4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_b5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hbti_ll_background"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_fQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="question1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_f1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_f2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_f3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모르겠다/보통"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_f4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_f5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hbti_ll_background"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_eQue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="question1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rg_enjoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_e1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_e2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 그렇다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_e3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모르겠다/보통"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_e4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="약간 아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <RadioButton
                        android:id="@+id/rb_e5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아니다"
                        android:textColor="@color/black"
                        android:textSize="22sp" />
                </RadioGroup>
            </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:padding="20dp"
            android:textSize="26sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="다음"
            android:background="@drawable/btn_hbti_start"/>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>