<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pt_approve_toolbar_back_iv"
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <LinearLayout
        android:id="@+id/trainerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- 트레이너용 뷰 -->
        <EditText
            android:id="@+id/etApprovesessionSid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:hint="Sid"
            android:inputType="text"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="486dp" />

        <EditText
            android:id="@+id/etApprovesessionTrainerUid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:ems="12"
            android:hint="TrainerUid"
            android:inputType="text"
            tools:layout_editor_absoluteX="80dp"
            tools:layout_editor_absoluteY="538dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnApprovesession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_search_button"
                android:text="승인"
                tools:layout_editor_absoluteX="101dp"
                tools:layout_editor_absoluteY="611dp" />

            <Button
                android:id="@+id/btnDisapprovesession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/radius_search_button"
                android:text="거절"
                tools:layout_editor_absoluteX="224dp"
                tools:layout_editor_absoluteY="611dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvApprovesessionResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="결과"
        app:layout_constraintBottom_toTopOf="@+id/trainerLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>