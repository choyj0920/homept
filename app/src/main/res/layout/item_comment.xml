<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dp">


    <ImageView
        android:id="@+id/comment_profile_iv"
        android:layout_width="57dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_person_2_24" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comment_author_tv"
                android:layout_width="83dp"
                android:layout_height="35dp"
                android:text="작성자"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment_create_at_tv"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="날짜" />

            <ImageView
                android:id="@+id/more_info_comment_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_more_horiz_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/comment_text_tv"
            android:layout_width="314dp"
            android:layout_height="55dp"
            android:layout_marginTop="6dp"
            android:text="댓글 댓글 댓글 댓글 댓글 댓글 댓글 댓글 댓글 댓글 댓글"
            android:textSize="19sp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="#D1D1D1"
            android:layout_gravity="left"/>

    </LinearLayout>


</LinearLayout>

