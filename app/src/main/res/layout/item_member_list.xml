<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/review_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="112dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/mypage_member_iv"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mypage_hong" />

        <TextView
            android:id="@+id/mypage_member_name_tv"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="20dp"
            android:text="이 름"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/mypage_member_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypage_member_gender_tv"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:text="성별"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/mypage_member_name_tv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mypage_member_category_tv"
            android:layout_width="177dp"
            android:layout_height="43dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text=""
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mypage_member_iv" />

        <Button
            android:id="@+id/btnApprovesession"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/rounded_button"
            android:text="승인"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDisapprovesession"
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/rounded_button"
            android:text="거절"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnWriteReview"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/rounded_button"
            android:text="리뷰 작성"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>